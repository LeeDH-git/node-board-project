<%
  const isEdit = mode === "edit";
  const actionUrl = isEdit ? `/client/${client.id}/edit` : "/client";
%>

<style>
  .form-wrap{
    max-width: 820px;
  }

  .form-head{
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap:12px;
    margin-bottom: 14px;
    flex-wrap: wrap;
  }
  .form-head h2{
    margin:0;
    font-size: 18px;
    font-weight: 650;
    letter-spacing: -0.01em;
  }
  .form-head .sub{
    margin: 2px 0 0;
    font-size: 12.5px;
    color: var(--muted);
  }

  .btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    line-height: 1;
  }

  .form-grid{
    display:grid;
    gap:12px;
  }

  .field{
    display:grid;
    gap:6px;
  }
  .field label{
    font-weight: 600;
    font-size: 13px;
  }

  input[type="text"], input[type="email"], textarea{
    width: 100%;
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 10px 12px;
    background: #fff;
    font-family: inherit;
    font-size: 14px;
  }
  textarea{ resize: vertical; }

  input:focus, textarea:focus{
    outline:none;
    border-color: var(--text);
    box-shadow: var(--ring);
  }

  .actions{
    margin-top: 14px;
    display:flex;
    gap:8px;
    justify-content:flex-end;
    flex-wrap: wrap;
  }
</style>

<div class="form-wrap">
  <div class="form-head">
    <div>
      <h2><%= pageTitle %></h2>
      <div class="sub">거래처 기본정보를 입력하세요.</div>
    </div>

    <div class="actions">
      <a href="/client" class="btn">목록</a>
      <button type="submit" form="client-form" class="btn btn-primary">
        <%= isEdit ? "수정 저장" : "저장" %>
      </button>
    </div>
  </div>

  <form id="client-form" method="POST" action="<%= actionUrl %>" class="form-grid">
    <div class="field">
      <label>거래처명 (필수)</label>
      <input name="name" required value="<%= client.name || '' %>" />
    </div>

    <div class="field">
      <label>사업자번호</label>
      <input name="biz_no" value="<%= client.biz_no || '' %>" />
    </div>

    <div class="field">
      <label>대표자</label>
      <input name="ceo_name" value="<%= client.ceo_name || '' %>" />
    </div>

    <div class="field">
      <label>전화</label>
      <input name="phone" value="<%= client.phone || '' %>" />
    </div>

    <div class="field">
      <label>이메일</label>
      <input type="email" name="email" value="<%= client.email || '' %>" />
    </div>

    <div class="field">
      <label>주소</label>
      <input name="address" value="<%= client.address || '' %>" />
    </div>

    <div class="field">
      <label>메모</label>
      <textarea name="memo" rows="5"><%= client.memo || '' %></textarea>
    </div>
  </form>
</div>
