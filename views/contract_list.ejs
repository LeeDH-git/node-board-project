<style>
  .search-form{
    display:flex;
    gap:8px;
    flex-wrap: wrap;
    align-items:center;
    width: 100%;
  }
  .search-form input[type="text"]{
    height: 36px;
    padding: 0 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: #fff;
    min-width: 260px;
  }
  .search-form input[type="text"]:focus{
    outline:none;
    border-color: var(--text);
    box-shadow: var(--ring);
  }

  .table-scroll{
    margin-top: 12px;
    overflow-x:auto;
    border: 1px solid var(--border);
    border-radius: 12px;
    background: #fff;
  }

  table{
    width:100%;
    border-collapse: collapse;
    min-width: 980px;
  }

  thead th{
    background: var(--bg);
    color: var(--text);
    font-weight: 650;
    font-size: 12.5px;
    padding: 10px 12px;
    border-bottom: 1px solid var(--border);
    text-align:left;
    white-space: nowrap;
  }
  tbody td{
    font-size: 13px;
    padding: 10px 12px;
    border-bottom: 1px solid var(--border);
    vertical-align: middle;
  }
  tbody tr:hover{ background: var(--bg); }

  .text-right{ text-align:right; }
  .text-center{ text-align:center; }
  .nowrap{ white-space: nowrap; }

  .link{
    color: var(--text);
    text-decoration:none;
    font-weight: 650;
  }
  .link:hover{ text-decoration: underline; }

  .btn-ghost{
    height: 34px;
    padding: 0 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: #fff;
    color: var(--text);
    cursor: pointer;
    font-size: 12.5px;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    white-space: nowrap;
  }
  .btn-ghost:hover{ background: var(--bg); }

  .pagination{
    margin-top: 12px;
    display:flex;
    gap:6px;
    justify-content:center;
    flex-wrap: wrap;
  }
  .page{
    min-width: 30px;
    height: 32px;
    padding: 0 10px;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    border: 1px solid var(--border);
    border-radius: 10px;
    background:#fff;
    color: var(--text);
    font-size: 12.5px;
    text-decoration:none;
  }
  .page:hover{ background: var(--bg); }
  .page.current{
    background: var(--text);
    border-color: var(--text);
    color: #fff;
    font-weight: 650;
  }

  @media (max-width: 520px){
    .search-form input[type="text"]{ min-width: 0; width: 100%; }
  }
</style>

<form method="get" action="/contract" class="search-form">
  <input
    type="text"
    name="q"
    placeholder="계약명으로 검색"
    value="<%= (typeof searchQuery !== 'undefined' ? searchQuery : '') %>"
  />
  <button class="btn" type="submit">검색</button>
  <button class="btn" type="button" onclick="window.location.href='/contract'">새로고침</button>
</form>

<div class="table-scroll">
  <table>
    <thead>
      <tr>
        <th class="text-center" style="width:70px;">No</th>
        <th style="width:140px;">계약번호</th>
        <th>계약명</th>
        <th style="width:160px;" class="text-center">발주처</th>
        <th style="width:140px;" class="text-center">계약금액</th>
        <th style="width:190px;" class="text-center">공사기간</th>
        <th style="width:130px;" class="text-center">등록일</th>
        <th style="width:90px;" class="text-center">수정</th>
      </tr>
    </thead>

    <tbody>
      <% if (contracts && contracts.length > 0) { %>
        <% contracts.forEach((c) => { %>
          <tr>
            <td class="text-center"><%= c.row_no %></td>
            <td class="nowrap"><%= c.contract_no || '' %></td>

            <td>
              <a class="link" href="/contract/<%= c.id %>"><%= c.title %></a>
            </td>

            <td class="text-center"><%= c.client_name || '' %></td>

            <td class="text-center nowrap">
              <%= c.total_amount ? c.total_amount.toLocaleString("ko-KR") : '' %> 원
            </td>

            <td class="text-center nowrap">
              <% if (c.start_date || c.end_date) { %>
                <%= c.start_date || '' %> ~ <%= c.end_date || '' %>
              <% } else { %>
                -
              <% } %>
            </td>

            <td class="text-center nowrap">
              <%= c.created_at ? String(c.created_at).substring(0, 10) : '' %>
            </td>

            <td class="text-center">
              <a href="/contract/<%= c.id %>/edit" class="btn-ghost">수정</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center" style="color: var(--muted); padding: 18px;">
            등록된 계약이 없습니다.
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<% if (totalPages && totalPages > 1) { %>
  <div class="pagination" aria-label="Contract pagination">
    <% for (let p = 1; p <= totalPages; p++) { %>
      <% if (p === currentPage) { %>
        <span class="page current"><%= p %></span>
      <% } else { %>
        <a class="page" href="/contract?page=<%= p %><%= searchQuery ? '&q=' + encodeURIComponent(searchQuery) : '' %>">
          <%= p %>
        </a>
      <% } %>
    <% } %>
  </div>
<% } %>
