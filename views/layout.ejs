    /* ===== Theme Tokens ===== */
    :root {
      --bg: #F9FAFB;
      --panel: #FFFFFF;
      --text: #111827;
      --muted: #6B7280;
      --border: #E5E7EB;
      --hover: #F3F4F6;
      --primary: #111827;
      --primaryHover: #0B1220;
      --radius: 12px;
      --shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
      --ring: 0 0 0 4px rgba(17, 24, 39, 0.14);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: Paperozi,
        -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, "Noto Sans KR", "Apple SD Gothic Neo",
        "Malgun Gothic", Arial, sans-serif;
      font-size: 14.5px;
      font-weight: 400;
      line-height: 1.6;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    .app {
      min-height: 100vh;
      display: flex;
    }

    /* ===== Sidebar ===== */
    .sidebar {
      width: 256px;
      background: var(--panel);
      border-right: 1px solid var(--border);
      padding: 16px;
      position: sticky;
      top: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 10px;
      border-radius: 10px;
    }

    .brand-logo {
      width: 28px;
      height: 28px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .brand-logo img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    .brand-title {
      font-weight: 700;
      font-size: 14px;
    }

    .nav-title {
      font-size: 12px;
      color: var(--muted);
      margin: 6px 10px;
      text-transform: uppercase;
      letter-spacing: .06em;
    }

    .nav {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .nav a {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 9px 10px;
      border-radius: 10px;
      color: var(--text);
    }

    .nav a:hover {
      background: var(--hover);
    }

    .nav a.active {
      background: var(--hover);
      font-weight: 700;
    }

    /* ===== Main ===== */
    .main {
      flex: 1;

      /* ✅ C: 실제 콘텐츠 폭을 넓히기 위해 패딩을 살짝 줄임 */
      padding: 18px 22px;
      
      background: transparent;
    }

    .topbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 14px;
    }

    .page-title {
      font-size: 22px;
      font-weight: 700;
      letter-spacing: -0.01em;
      margin: 0;
    }

    .page-sub {
      margin: 2px 0 0;
      color: var(--muted);
      font-size: 13px;
    }

    .btn {
      height: 36px;
      padding: 0 14px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: var(--panel);
      color: var(--text);
      cursor: pointer;
      font-weight: 500;

      display: inline-flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
      white-space: nowrap;
    }

    .btn:hover {
      background: var(--bg);
    }

    .btn-primary {
      border-color: transparent;
      background: var(--primary);
      color: #fff;
      font-weight: 600;
    }

    .btn-primary:hover {
      background: var(--primaryHover);
    }

    .panel {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);

      /* ✅ C: 패딩을 줄여 테이블 실사용 폭 확대 */
      padding: 14px;
    }

