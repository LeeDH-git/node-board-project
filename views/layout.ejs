<body>
  <div class="app">
    <aside class="sidebar">
      <div class="brand">
        <div class="brand-logo">
          <img src="/icons/logo.png" alt="로고">
        </div>
        <div>
          <div class="brand-title">현장관리 시스템</div>
          <div style="font-size:12px; color:var(--muted);">Console</div>
        </div>
      </div>

      <div>
        <div class="nav-title">Manage</div>
        <nav class="nav">
          <a href="/" class="<%= (typeof active !== 'undefined' && active === 'home') ? 'active' : '' %>">Home</a>
          <a href="/estimate"
            class="<%= (typeof active !== 'undefined' && active === 'estimate') ? 'active' : '' %>">견적관리</a>
          <a href="/contract"
            class="<%= (typeof active !== 'undefined' && active === 'contract') ? 'active' : '' %>">계약관리</a>
          <a href="/progress"
            class="<%= (typeof active !== 'undefined' && active === 'progress') ? 'active' : '' %>">기성관리</a>
          <a href="/staff" class="<%= (typeof active !== 'undefined' && active === 'staff') ? 'active' : '' %>">직원관리</a>
          <a href="/client"
            class="<%= (typeof active !== 'undefined' && active === 'client') ? 'active' : '' %>">거래처관리</a>
          <a href="/library"
            class="<%= (typeof active !== 'undefined' && active === 'library') ? 'active' : '' %>">자료관리</a>
        </nav>
          <!-- 로그인 상태 UI -->
          <div style="margin-top: 12px;">
            <div class="user-card">
              <% if (currentUser) { %>
          
                <div class="user-card-row">
                  <!-- <div class="user-avatar">
                    <%= (currentUser.username || 'U' ).slice(0, 1).toUpperCase() %>
                  </div> -->
                  <div class="user-name">
                    <%= currentUser.name %>
                  </div>
                  <div class="user-meta">
                    <div class="user-name">
                      <%= currentUser.name || currentUser.username %>
                    </div>
                    <div class="user-sub">
                      <%= currentUser.role ? currentUser.role : 'user' %>
                        · 로그인 중
                    </div>
                  </div>
                </div>
          
                <form method="post" action="/logout" class="user-actions">
                  <button type="submit" class="btn btn-sm">로그아웃</button>
                </form>
          
                <% } else { %>
          
                  <div class="user-card-row">
                    <div class="user-avatar">?</div>
                    <div class="user-meta">
                      <div class="user-name">미로그인</div>
                      <div class="user-sub">로그인이 필요합니다</div>
                    </div>
                  </div>
          
                  <div class="user-actions">
                    <a href="/login" class="btn btn-sm btn-primary">로그인</a>
                  </div>
          
                  <% } %>
            </div>
          </div>

      </div>
    </aside>

    <main class="main">
      <div class="topbar">
        <div>
          <h1 class="page-title">
            <%= (typeof headerTitle !=='undefined' ? headerTitle : "현장 관리 시스템" ) %>
          </h1>
          <% if (typeof headerSub !=='undefined' && headerSub) { %>
            <p class="page-sub">
              <%= headerSub %>
            </p>
            <% } %>
        </div>

        <% if (typeof headerAction !=='undefined' && headerAction) { %>
          <div><%- headerAction %></div>
          <% } %>
      </div>

      <div class="panel">
        <%- body %>
      </div>
    </main>
  </div>
</body>

