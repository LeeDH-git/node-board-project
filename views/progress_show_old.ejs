<style>
  :root {
    --bg: var(--bg, #F9FAFB);
    --panel: var(--panel, #FFFFFF);
    --text: var(--text, #111827);
    --muted: var(--muted, #6B7280);
    --border: var(--border, #E5E7EB);
    --ring: var(--ring, 0 0 0 4px rgba(17, 24, 39, .14));
  }

  /* ✅ 공통 .card 충돌 방지: progress 전용 클래스 */
  .p-card {
    border: 1px solid rgba(17, 24, 39, 0.14);
    /* var(--border)보다 살짝 진하게 */
    border-radius: 12px;
    background: var(--panel);
    padding: 16px;
  }

  .p-card+.p-card {
    margin-top: 12px;
  }

  .p-title {
    margin: 0 0 10px 0;
    font-size: 13px;
    font-weight: 750;
    letter-spacing: -0.01em;
    color: var(--text);
  }

  /* 요약 3칸 (견적상세 톤) */
  .p-summary {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 12px;
  }

  .p-sitem {
    border: 1px solid rgba(17, 24, 39, 0.12);
    border-radius: 12px;
    padding: 14px;
    background: #fff;
  }

  .p-k {
    font-size: 12.5px;
    color: var(--muted);
    font-weight: 750;
    margin-bottom: 6px;
  }

  .p-v {
    font-size: 18px;
    font-weight: 850;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .p-sub {
    margin-top: 6px;
    font-size: 12.5px;
    color: #9CA3AF;
  }

  /* 기성정보: 좌/우 2열 + 중간선 */
  .p-info {
    display: grid;
    grid-template-columns: 1fr 1px 1fr;
    gap: 18px;
    align-items: start;
  }

  .p-divider {
    width: 1px;
    background: rgba(17, 24, 39, 0.12);
    height: 100%;
  }

  .p-col {
    display: flex;
    flex-direction: column;
  }

  .p-row {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 8px;
    padding: 10px 0;
    border-bottom: 1px solid rgba(17, 24, 39, 0.10);
  }

  .p-col .p-row:last-child {
    border-bottom: none;
  }

  .p-label {
    color: var(--muted);
    font-size: 12.5px;
    font-weight: 700;
  }

  .p-value {
    color: var(--text);
    font-size: 13.5px;
    font-weight: 650;
    word-break: break-word;
  }

  .p-value.muted {
    color: var(--muted);
    font-weight: 600;
  }

  @media (max-width: 980px) {
    .p-summary {
      grid-template-columns: 1fr;
    }

    .p-info {
      grid-template-columns: 1fr;
    }

    .p-divider {
      display: none;
    }
  }
</style>

<!-- 요약 카드 -->
<div class="p-card">
  <div class="p-title">요약</div>

  <div class="p-summary">
    <div class="p-sitem">
      <div class="p-k">계약금액</div>
      <div class="p-v">
        <%= summary.contractTotal ? Number(summary.contractTotal).toLocaleString("ko-KR") : 0 %> 원
      </div>
    </div>

    <div class="p-sitem">
      <div class="p-k">누적 기성금액</div>
      <div class="p-v">
        <%= summary.sumPaid ? Number(summary.sumPaid).toLocaleString("ko-KR") : 0 %> 원
      </div>
      <div class="p-sub">계약 기준 누적 합계</div>
    </div>

    <div class="p-sitem">
      <div class="p-k">잔액(계약금액 - 누적)</div>
      <div class="p-v">
        <%= summary.balance ? Number(summary.balance).toLocaleString("ko-KR") : 0 %> 원
      </div>
      <div class="p-sub">정산/청구 계획 확인</div>
    </div>
  </div>
</div>

<!-- 기성 정보 카드 -->
<div class="p-card">
  <div class="p-title">기성 정보</div>

  <div class="p-info">
    <div class="p-col">
      <div class="p-row">
        <div class="p-label">기성번호</div>
        <div class="p-value">
          <%= progress.progress_no || "-" %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">기성월</div>
        <div class="p-value">
          <%= progress.progress_month || "-" %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">기성률</div>
        <div class="p-value">
          <%= (progress.progress_rate===null || progress.progress_rate===undefined || progress.progress_rate==='' )
            ? '-' : (Number(progress.progress_rate).toFixed(2) + ' %' ) %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">기성금액</div>
        <div class="p-value">
          <%= progress.progress_amount ? Number(progress.progress_amount).toLocaleString("ko-KR") : 0 %> 원
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">등록일</div>
        <div class="p-value">
          <%= progress.created_at ? String(progress.created_at).substring(0,10) : "" %>
        </div>
      </div>
    </div>

    <div class="p-divider"></div>

    <div class="p-col">
      <div class="p-row">
        <div class="p-label">계약명</div>
        <div class="p-value">
          <%= progress.contract_title || "-" %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">발주처</div>
        <div class="p-value">
          <%= progress.contract_client_name || "-" %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">계약번호</div>
        <div class="p-value">
          <%= progress.contract_no || "-" %>
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">계약금액</div>
        <div class="p-value">
          <%= progress.contract_total_amount ? Number(progress.contract_total_amount).toLocaleString("ko-KR") : 0 %> 원
        </div>
      </div>
      <div class="p-row">
        <div class="p-label">비고</div>
        <div class="p-value muted" style="white-space:pre-wrap;">
          <%= progress.note || "-" %>
        </div>
      </div>
    </div>
  </div>
</div>